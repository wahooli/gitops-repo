PAPERLESS_TIME_ZONE=Europe/Helsinki
TZ=Europe/Helsinki
PAPERLESS_PORT=8000
PAPERLESS_OCR_LANGUAGES=fin eng
PAPERLESS_OCR_LANGUAGE=fin+eng
PAPERLESS_WEBSERVER_WORKERS=2
PAPERLESS_TIKA_ENABLED=0
PAPERLESS_OCR_IMAGE_DPI=600
PAPERLESS_LOGROTATE_MAX_BACKUPS=10
PAPERLESS_URL=https://paperless.wahoo.li
PAPERLESS_ALLOWED_HOSTS=.absolutist.it,.wahoo.li
PAPERLESS_CORS_ALLOWED_HOSTS=https://*.absolutist.it,https://*.wahoo.li
PAPERLESS_CSRF_TRUSTED_ORIGINS=https://*.absolutist.it,https://*.wahoo.li
PAPERLESS_TASK_WORKERS=2
PAPERLESS_THREADS_PER_WORKER=3
