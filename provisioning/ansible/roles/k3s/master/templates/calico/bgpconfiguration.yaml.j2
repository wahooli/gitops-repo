---
apiVersion: crd.projectcalico.org/v1
kind: BGPConfiguration
metadata:
  name: default
spec:
  nodeToNodeMeshEnabled: false
  asNumber: {{ calico.bgp.node_as }}
  serviceClusterIPs:
  - cidr: "{{ k3s_server.cidr.service }}"
  serviceExternalIPs:
  - cidr: "{{ calico.bgp.external_ips }}"
  serviceLoadBalancerIPs:
  - cidr: "{{ calico.bgp.external_ips }}"